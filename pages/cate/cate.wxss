.main {
    display: flex;
}

.left {
    width: 20%;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
}

.content {
    height: 76rpx;
    text-align: center;
}

.red {
    color: red;
}

.right-con {
    display: flex;
    height: 100rpx;
}

.right-con {
    display: flex;
    flex-wrap: wrap;
}

.right-item {
    width: 50%;
    height: 250rpx;
}

.right-item image {
    width: 100%;
    height: 200rpx;
}

.right-item .title {
    font-style: 32rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}